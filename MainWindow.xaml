<Window x:Class="DevUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C# to TypeScript Code Generator" Height="400" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="5">
            <TextBlock Text="Nhập mã C#:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="InputCSharpCode" Height="300" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            <Button Name="GenerateButton" Content="Sinh mã TypeScript" Margin="0,10,0,0" Click="GenerateButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="5">
            <TextBlock Text="Thông tin lớp:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="OutputClassInfo" Height="300" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
            <TextBlock Text="Generated TypeScript Code:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox Name="OutputTypeScriptCode" Height="300" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
